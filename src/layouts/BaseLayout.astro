---
const { title = "Midnight Learning" } = Astro.props;
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body
    class="bg-white text-slate-900 font-medium min-h-screen flex flex-col selection:bg-brand-200 selection:text-brand-900"
  >
    <div
      class="fixed inset-x-0 top-0 h-96 bg-gradient-to-b from-brand-50 to-transparent -z-10 pointer-events-none"
    >
    </div>

    <header
      class="border-b border-slate-100 bg-white/80 backdrop-blur-md sticky top-0 z-50"
    >
      <nav
        class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between"
      >
        <a
          href="/"
          class="text-xl font-bold tracking-tight text-brand-900 flex items-center gap-2"
        >
          <span>Midnight Learning</span>
        </a>
        <div class="flex gap-8 text-sm font-medium">
          <a
            href="/concepts"
            class="text-slate-600 hover:text-brand-600 transition-colors"
            >Concepts</a
          >
          <a
            href="/projects/edgechain"
            class="text-slate-600 hover:text-brand-600 transition-colors"
            >EdgeChain</a
          >
          <a
            href="/projects/msingi"
            class="text-slate-600 hover:text-brand-600 transition-colors"
            >Msingi</a
          >
          <a
            href="/projects/ndani"
            class="text-slate-600 hover:text-brand-600 transition-colors"
            >Ndani</a
          >
          <a
            href="/updates"
            class="text-slate-600 hover:text-brand-600 transition-colors"
            >Updates</a
          >
        </div>
        <a
          href="/faq"
          class="px-4 py-2 bg-brand-600 text-white rounded-full text-sm font-medium hover:bg-brand-700 transition-colors shadow-sm shadow-brand-200"
        >
          Explore FAQ
        </a>
      </nav>
    </header>

    <main class="flex-1 w-full max-w-7xl mx-auto px-4 py-12">
      <slot />
    </main>

    <footer
      class="border-t border-slate-100 py-12 text-center text-slate-500 text-sm bg-slate-50"
    >
      <p>Â© {new Date().getFullYear()} Midnight Learning.</p>
      <p class="mt-2 text-xs text-slate-400">
        Research-driven documentation for privacy-preserving systems.
      </p>
    </footer>
  </body>
</html>
