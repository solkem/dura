---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ProjectBadge } from '../../components';

export const prerender = true;

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const isEdgeChain = entry.slug === 'edgechain';
const themeColor = isEdgeChain ? 'text-emerald-700' : 'text-amber-700';
const bgTheme = isEdgeChain ? 'bg-emerald-50' : 'bg-amber-50';
const borderTheme = isEdgeChain ? 'border-emerald-100' : 'border-amber-100';
---

<BaseLayout title={`${entry.data.title} | Midnight Learning`}>
  <div class="max-w-5xl mx-auto">
    <div class={`mb-12 text-center p-12 rounded-3xl ${bgTheme} ${borderTheme} border`}>
      <div class="inline-block mb-6 transform scale-125">
        <ProjectBadge project={entry.slug as 'edgechain' | 'msingi'} />
      </div>
      <h1 class={`text-6xl font-extrabold mb-6 tracking-tight ${themeColor}`}>{entry.data.title}</h1>
      <p class="text-2xl text-slate-700 font-medium max-w-2xl mx-auto">{entry.data.tagline}</p>
      
      <div class="flex justify-center gap-8 mt-8 text-sm text-slate-500 font-medium">
        <div class="flex items-center gap-2">
            <span>Status:</span> 
            <span class="px-3 py-1 bg-white rounded-full shadow-sm text-slate-800 uppercase tracking-wide text-xs font-bold border border-slate-100">{entry.data.status}</span>
        </div>
        {entry.data.repo && (
          <a href={entry.data.repo} class="hover:text-brand-600 transition-colors flex items-center gap-1 group">
             <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" /></svg>
             <span class="group-hover:underline">Repository</span>
          </a>
        )}
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-16 pb-12 border-b border-slate-100">
      <div class="md:col-span-2">
        <h3 class="text-xl font-bold text-slate-900 mb-6">Core Team</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {entry.data.team.map(member => (
            <div class="bg-white p-4 rounded-xl border border-slate-100 shadow-sm flex items-center gap-4">
               <div class="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center text-slate-400 font-bold text-lg">
                  {member.name.charAt(0)}
               </div>
               <div>
                  <div class="font-bold text-slate-800">{member.name}</div>
                  <div class="text-xs font-medium uppercase tracking-wide text-slate-500">{member.role}</div>
               </div>
            </div>
          ))}
        </div>
      </div>
      <div>
        <h3 class="text-xl font-bold text-slate-900 mb-6">Project Meta</h3>
        <div class="bg-slate-50 p-6 rounded-xl border border-slate-100 space-y-3 text-sm text-slate-600">
          <div class="flex justify-between">
            <span class="font-medium text-slate-500">Last Updated</span>
            <span class="text-slate-900 text-right">{entry.data.lastUpdated.toLocaleDateString()}</span>
          </div>
          <div class="flex justify-between">
             <span class="font-medium text-slate-500">Editor</span>
             <span class="text-slate-900 text-right">{entry.data.updatedBy}</span>
          </div>
        </div>
      </div>
    </div>

    <article class="prose prose-lg prose-slate max-w-none 
      prose-headings:font-bold prose-headings:text-slate-900 prose-headings:tracking-tight
      prose-a:text-brand-600 prose-a:no-underline hover:prose-a:underline
      prose-p:text-slate-600 prose-p:leading-relaxed
      prose-li:text-slate-600
      [&>table]:w-full [&>table]:border-collapse [&>table]:my-8 [&>table]:rounded-lg [&>table]:overflow-hidden [&>table]:shadow-sm
      [&>table_th]:text-left [&>table_th]:p-4 [&>table_th]:bg-slate-50 [&>table_th]:text-slate-900 [&>table_th]:font-bold
      [&>table_td]:p-4 [&>table_td]:border-t [&>table_td]:border-slate-100 [&>table_td]:text-slate-600">
      <Content />
    </article>
  </div>
</BaseLayout>
