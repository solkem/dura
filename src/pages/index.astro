---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { ProjectBadge } from "../components";

export const prerender = false;

const concepts = await getCollection("concepts");
---

<BaseLayout title="Dura â€” The Knowledge Granary">
  <div class="text-center mb-20 pt-8">
    <h1 class="text-6xl font-extrabold text-stone-900 mb-6 tracking-tight">
      The <span class="italic text-amber-600 font-serif">Knowledge</span> Granary<br
      />
      for privacy research.
    </h1>
    <p class="text-xl text-slate-600 max-w-2xl mx-auto leading-relaxed">
      Industry-grade learning platform for zero-knowledge proofs, blockchain
      privacy, and trustless IoT systems. Part of the baeIoT ecosystem.
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
    <a
      href="/projects/edgechain"
      class="group block p-10 rounded-3xl bg-white border-2 border-slate-100 hover:border-emerald-200 hover:shadow-xl hover:shadow-emerald-100 transition-all duration-300"
    >
      <div class="flex items-center justify-between mb-4">
        <h2
          class="text-3xl font-bold text-emerald-700 group-hover:translate-x-1 transition-transform"
        >
          EdgeChain &rarr;
        </h2>
        <span class="p-2 bg-emerald-50 rounded-full text-emerald-600">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
            ></path></svg
          >
        </span>
      </div>
      <p class="text-slate-600 mb-6 text-lg">
        Privacy-preserving agricultural AI for smallholder farmers.
      </p>
      <div class="flex gap-2">
        <span
          class="px-3 py-1.5 rounded-full bg-emerald-50 text-emerald-700 text-sm font-medium border border-emerald-100/50"
          >ZKP</span
        >
        <span
          class="px-3 py-1.5 rounded-full bg-emerald-50 text-emerald-700 text-sm font-medium border border-emerald-100/50"
          >Federated Learning</span
        >
      </div>
    </a>

    <a
      href="/projects/msingi"
      class="group block p-10 rounded-3xl bg-white border-2 border-slate-100 hover:border-amber-200 hover:shadow-xl hover:shadow-amber-100 transition-all duration-300"
    >
      <div class="flex items-center justify-between mb-4">
        <h2
          class="text-3xl font-bold text-amber-700 group-hover:translate-x-1 transition-transform"
        >
          Msingi &rarr;
        </h2>
        <span class="p-2 bg-amber-50 rounded-full text-amber-600">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
            ></path></svg
          >
        </span>
      </div>
      <p class="text-slate-600 mb-6 text-lg">
        Anonymous IoT device identity and autonomous wallets.
      </p>
      <div class="flex gap-2">
        <span
          class="px-3 py-1.5 rounded-full bg-amber-50 text-amber-700 text-sm font-medium border border-amber-100/50"
          >BRACE</span
        >
        <span
          class="px-3 py-1.5 rounded-full bg-amber-50 text-amber-700 text-sm font-medium border border-amber-100/50"
          >IoT</span
        >
      </div>
    </a>

    <a
      href="/projects/ndani"
      class="group block p-10 rounded-3xl bg-white border-2 border-slate-100 hover:border-cyan-200 hover:shadow-xl hover:shadow-cyan-100 transition-all duration-300"
    >
      <div class="flex items-center justify-between mb-4">
        <h2
          class="text-3xl font-bold text-cyan-700 group-hover:translate-x-1 transition-transform"
        >
          Ndani &rarr;
        </h2>
        <span class="p-2 bg-cyan-50 rounded-full text-cyan-600">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
            ></path></svg
          >
        </span>
      </div>
      <p class="text-slate-600 mb-6 text-lg">
        Trustless privacy infrastructure and autonomous machine economies.
      </p>
      <div class="flex gap-2">
        <span
          class="px-3 py-1.5 rounded-full bg-cyan-50 text-cyan-700 text-sm font-medium border border-cyan-100/50"
          >Trustless</span
        >
        <span
          class="px-3 py-1.5 rounded-full bg-cyan-50 text-cyan-700 text-sm font-medium border border-cyan-100/50"
          >No-Gateway</span
        >
      </div>
    </a>
  </div>

  <div class="text-center mb-12">
    <h3 class="text-3xl font-bold text-stone-800">Core Concepts</h3>
    <p class="text-slate-500 mt-2">
      Foundational knowledge for the Midnight ecosystem
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {
      concepts.map((concept) => (
        <a
          href={`/concepts/${concept.slug}`}
          class="block p-6 rounded-2xl bg-white border border-slate-100 shadow-sm hover:shadow-md hover:border-amber-200 transition-all group"
        >
          <div class="flex justify-between items-start mb-4">
            <span class="text-xs font-bold text-amber-700 bg-amber-50 px-2 py-1 rounded uppercase tracking-wide">
              {concept.data.category}
            </span>
            <div class="flex gap-1 transform group-hover:scale-105 transition-transform">
              {concept.data.projects.map((p) => (
                <ProjectBadge project={p} />
              ))}
            </div>
          </div>
          <h4 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-amber-700 transition-colors">
            {concept.data.title}
          </h4>
          <div class="flex items-center text-sm text-slate-400 mt-4">
            <span>Read Concept &rarr;</span>
          </div>
        </a>
      ))
    }
  </div>
</BaseLayout>
