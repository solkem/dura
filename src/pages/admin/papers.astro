---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { PaperProcessor } from "../../components/admin/PaperProcessor";

export const prerender = false;

// Debug: log what we have
console.log("Admin papers - session:", Astro.locals.session);
console.log("Admin papers - user:", Astro.locals.user);

// Check if user is logged in
if (!Astro.locals.user) {
    return Astro.redirect("/login?redirect=/admin/papers");
}
---

<BaseLayout title="Paper Processor | Dura Admin">
    <main class="admin-papers">
        <nav class="breadcrumb">
            <a href="/">Home</a> / <a href="/admin">Admin</a> / Papers
        </nav>

        <h1>ðŸ“š Paper Processor</h1>
        <p class="intro">
            Use AI agents to curate and synthesize research papers. Papers are
            evaluated for relevance to Citizen Scientists and summarized using
            the Nyakupfuya test.
        </p>

        <PaperProcessor client:load />
    </main>
</BaseLayout>

<style>
    .admin-papers {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }
    .breadcrumb {
        font-size: 0.9rem;
        margin-bottom: 1rem;
        color: #888;
    }
    .breadcrumb a {
        color: #888;
        text-decoration: none;
    }
    .breadcrumb a:hover {
        color: #d97706;
    }
    h1 {
        margin-bottom: 0.5rem;
    }
    .intro {
        color: #999;
        margin-bottom: 2rem;
        line-height: 1.6;
    }
</style>
