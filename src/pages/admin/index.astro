            background: #10b981;
            color: #fff;
        }
        .role-contributor {
            background: #3b82f6;
            color: #fff;
        }
        .role-public {
            background: #6b7280;
            color: #fff;
        }

        .recent-email {
            font-size: 0.85rem;
            color: #9ca3af;
            margin-left: auto;
        }

        .view-all {
            display: inline-block;
            margin-top: 1rem;
            color: #b45309;
            font-size: 0.9rem;
            text-decoration: none;
        }

        .view-all:hover {
            text-decoration: underline;
        }
    </style>
</BaseLayout>
